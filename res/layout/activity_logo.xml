<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingRight="20dp"
    android:background="@color/color_menu_bg">
    
        <TextView
        android:id="@+id/textview_cha_logosetinfo"
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:text="@string/str_logo_reset_info"
        android:textColor="#ffffff"
        android:textSize="22sp" />
        
        <RelativeLayout
        android:id="@+id/linearlayout_logo_set_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_cha_logosetinfo"
        android:layout_alignStart="@+id/textview_cha_logosetinfo"
        android:layout_alignEnd="@+id/textview_cha_logosetinfo"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_logo_reset_yes"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_dialog_btn"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/str_menu_reset_dialog_confirm"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textview_logo_reset_no"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_dialog_btn"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/str_menu_reset_dialog_cancel"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>
    

</RelativeLayout>
