<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- combo button -->
    <style name="pic_mode_sty_combo_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_item_height</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/selector_second_menu_item</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="pic_mode_sty_combo_name">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    
    <style name="pic_mode_sty_combo_indicator">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_indicator</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    
    <!-- seekbar button -->
    <style name="pic_mode_sty_seekbar_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_item_height</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/selector_second_menu_item</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="pic_mode_sty_seekbar_name">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <style name="pic_mode_sty_bar">
        <item name="android:layout_width">@dimen/dimen_picture_menu_bar_width</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_bar_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
        <item name="android:thumb">@null</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:progressDrawable">@drawable/second_menu_seekbar_color</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="pic_mode_sty_seekbar_indicator">
        <item name="android:layout_width">@dimen/dimen_picture_menu_bar_indicator</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    
    <!-- button style -->
    <style name="pic_mode_sty_button_btn">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_width</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_item_height</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/selector_second_menu_item</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="pic_mode_sty_button_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    
    
    <!-- left/right arrows -->
    <style name="pic_mode_sty_leftarrow">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_arrows_width</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_item_arrows_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/item_left_white</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="pic_mode_sty_rightarrow">
        <item name="android:layout_width">@dimen/dimen_picture_menu_item_arrows_width</item>
        <item name="android:layout_height">@dimen/dimen_picture_menu_item_arrows_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/item_right_white</item>
        <item name="android:visibility">visible</item>
    </style>
    
    
    <!-- 4 dots -->
    <style name="pic_mode_sty_dots_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">133dip</item>
        <item name="android:layout_marginTop">7dip</item>
    </style>
    <style name="pic_mode_sty_enabledot">
        <item name="android:layout_width">15dip</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:background">@drawable/common_img_pagepoint_enable</item>
    </style>
    <style name="pic_mode_sty_disabledot">
        <item name="android:layout_width">15dip</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:background">@drawable/common_img_pagepoint_disable</item>
    </style>
    
    <style name="pic_mode_colortmp_sty_bar">
        <item name="android:layout_width">111dip</item>
        <item name="android:layout_height">13dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:max">2048</item>
        <item name="android:progress">50</item>
        <item name="android:thumb">@drawable/picture_mode_img_bar</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="pic_mode_sty_colortmp_indicator">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
</resources>
